<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apaodevo.basura_juan">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>


    <application
        android:name=".Services.GlobalData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Basura Juan"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.RegisterUserActivity"></activity>
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.BinListActivity"
            android:launchMode="singleTask"
            android:label="@string/binlist_activity">

        </activity>
        <activity android:name=".Activities.HomeActivity">

        </activity>
        <activity
            android:name=".Activities.NavigationDrawerActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme"/>
        <!--android:label="@string/title_toolbar"-->
        <activity android:name=".Activities.BinLocationActivity" />
        <activity android:name=".Activities.DeployBinActivity"
            android:label="@string/deployment_history_activity"
            android:launchMode="singleTask">
        </activity>
        <activity android:name=".Activities.RegisterBin"
            android:launchMode="singleTask"></activity>
        <activity android:name=".Activities.DeviceList">
        </activity>
        <activity android:name=".Activities.NavigateBin"></activity>
        <activity android:name=".Activities.UserProfileActivity"
            android:label="@string/user_profile_activity"
            android:launchMode="singleTask">
        </activity>

        <activity android:name=".Activities.BinNavigation"></activity>
    </application>

</manifest>