<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/colorBg"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_de"
        android:layout_width="147dp"
        android:layout_height="176dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bin_location" />

    <Button
        android:id="@+id/btn_deploy_bin"
        android:layout_alignRight="@+id/btn_de"
        android:layout_width="147dp"
        android:layout_height="176dp"

        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/deploy_bin"/>

    <Button
        android:id="@+id/btn_register_bin"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/btn_de"
        android:background="@drawable/register_bin"
        android:layout_width="147dp"
        android:layout_marginLeft="30dp"
        android:layout_height="176dp" />

    <Button
        android:id="@+id/btn_navigate_bin"
        android:layout_width="147dp"
        android:layout_below="@id/btn_de"
        android:layout_marginTop="25dp"
        android:background="@drawable/navigate_bin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_height="176dp" />
</RelativeLayout>