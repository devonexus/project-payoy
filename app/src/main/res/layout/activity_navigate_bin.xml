<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBg"
    android:layout_height="match_parent"
    android:id="@+id/container_wrapper"
    tools:context="com.example.apaodevo.basura_juan.Activities.NavigateBin">


    <Button
        android:id="@+id/btnLeft"
        android:layout_width="78dp"
        android:layout_height="73dp"
        android:background="@drawable/navigate_left"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnAutomationPause"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintVertical_bias="0.734" />

    <Button
        android:id="@+id/btnForward"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:background="@drawable/navigate_up"
        android:gravity="center"
        android:layout_alignBaseline="@+id/btnLeft"
        android:layout_alignBottom="@+id/btnLeft"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintVertical_bias="0.742" />

    <Button
        android:id="@+id/btnAutomationPause"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Pause Automation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Currently connected to: "

        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/btnStopDeployment"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/btnAutomationPause"
        android:layout_alignBottom="@+id/btnAutomationPause"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/btnAutomationPause"
        android:gravity="center"
        android:text="Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.356"
        app:layout_constraintHorizontal_bias="0.44" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/navigate_right"
        android:layout_alignBaseline="@+id/btnLeft"
        android:layout_alignBottom="@+id/btnLeft"
        android:layout_alignEnd="@+id/textView3"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnLeft"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toRightOf="@+id/btnLeft" />

    <Button
        android:id="@+id/btnDisconnect"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btnLeft"
        android:layout_alignStart="@+id/btnLeft"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/hint_disconnect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219" />

    <TextView
        android:id="@+id/txtBinConnected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/textView3" />


</android.support.constraint.ConstraintLayout >
